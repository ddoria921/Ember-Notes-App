<div class="grid row-1-1">	
	<aside class="row-1-1 col-1-4">
		{{ note-list notes=model selection=activeNote onSelect='refresh' }}
	</aside>

	<section class="note-content col-3-4 row-1-1">
		{{ note-editor refresh=refreshEditor value=activeNote.body options='{"buttons": ["bold", "italic"]}' }}
	</section>
</div>

<button {{action 'save'}}>Save</button>
<button {{action 'deleteAll'}}>Purge</button>