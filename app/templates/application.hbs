<div class="grid row-1-1">	
	<aside class="row-1-1 col-1-4">
		{{ note-list notes=sortedNotes defaultSelection='first' selection=activeNote onSelect='refreshEditor' }}
	</aside>

	<section class="note-content row-1-1 col-3-4 ">
		{{ note-editor refresh=refreshEditorFlag isUserTyping=isTyping value=activeNote.body options='{"buttons": ["bold", "italic"]}' }}
		<button class="blank-button new-note" {{action 'newNote'}}>+<span class="add"></span></button>
	</section>
</div>

